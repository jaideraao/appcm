{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Microcontroller",
            "type": "gdb",
            "request": "attach",
            "gdbpath": "arm-none-eabi-gdb",
            "executable": "${workspaceFolder}/bin/app.elf",
            "cwd": "${workspaceFolder}",
            "stopAtConnect": true,
            "stopAtEntry": true,
            "target": "extended-remote /dev/cu.usbmodem7BAE9BAB1",
            "valuesFormatting": "prettyPrinters",
            "autorun": [
                "monitor swd_scan",
                "attach 1",
                "file ${workspaceFolder}/bin/app.elf",
                "load",
                "compare-sections",
                "start"
            ]
        }
    ]
}
